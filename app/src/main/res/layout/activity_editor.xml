<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/svMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditorActivity"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:fitsSystemWindows="true"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:textColor="?android:attr/textColorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Data Mahasiswa"
            android:textAlignment="center"
            android:textSize="26sp"
            android:fontFamily="@font/poppins_bold" />

        <TextView
            android:id="@+id/tvNim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_user_24"
            android:drawablePadding="7dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Nomor Induk Mahasiswa" />

        <EditText
            android:id="@+id/etNim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Nomor Induk Mahasiswa"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tvNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:drawableStart="@drawable/ic_user_24"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="13dp"
            android:drawablePadding="7dp"/>

        <EditText
            android:id="@+id/etNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Nama Lengkap"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tvTtl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir"
            android:drawableStart="@drawable/ic_calendar_24"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="13dp"
            android:drawablePadding="7dp"/>

        <Button
            android:id="@+id/btTtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Tanggal"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="6dp"
            android:drawableLeft="@drawable/ic_edit_calendar_24"/>

        <TextView
            android:id="@+id/tvTtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9sp"
            android:text="Tanggal yang dipilih akan muncul di sini"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:id="@+id/tvJenisKelamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:drawableStart="@drawable/ic_user_24"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="19dp"
            android:drawablePadding="7dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pilih Jenis Kelamin"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/acJenisKelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:singleLine="true"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:drawableStart="@drawable/ic_address_24"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="20dp"
            android:drawablePadding="7dp"/>

        <EditText
            android:id="@+id/etAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:hint="Masukkan Alamat Lengkap"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/btSimpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="26dp"
            android:drawableLeft="@drawable/ic_save_24"
            android:text="Simpan" />

    </LinearLayout>
</ScrollView>

