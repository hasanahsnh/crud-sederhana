<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".InformasiActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp">

    <ImageView
        android:id="@+id/imgHome"
        android:layout_width="262dp"
        android:layout_height="233dp"
        android:src="@drawable/splash_screen"
        android:layout_marginTop="39dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informasi"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_bold"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplikasi Input Data Mahasiswa adalah solusi praktis untuk mengelola informasi mahasiswa dengan mudah dan efisien. Aplikasi ini merupakan pemenuhan terhadap tugas akhir PraAssesment Sertifikasi JMP VSGA 2024 "
        android:textSize="12sp"
        android:fontFamily="@font/poppins_regular"
        android:textAlignment="center"
        android:layout_marginTop="12sp"/>
</LinearLayout>